
% vectors & matrices notations in text
\newcommand{\vc}[1]{\mathbf{\underline{#1}}} % vector notation
\newcommand{\vcconj}[1]{\overline{\mathbf{\underline{#1}}}} % vector conjugate notation
\newcommand{\vcfunt}[2]{\mathbf{\underline{#1}}_{#2}(t)} % vector function of t
\newcommand{\mt}[1]{\mathbf{\underline{\underline{#1}}}} % matrix notation

% visual vectors
\newcommand{\vcii}[2]{\begin{bmatrix} #1 \\ #2 \end{bmatrix}} % column vectors 2d
\newcommand{\vciip}[2]{\begin{pmatrix} #1 \\ #2 \end{pmatrix}} % column vectors 2d
\newcommand{\vciii}[3]{\begin{bmatrix} #1 \\ #2 \\ #3 \end{bmatrix}} % column vectors 3d
\newcommand{\vciiip}[3]{\begin{pmatrix} #1 \\ #2 \\ #3 \end{pmatrix}} % column vectors 3d

% systems of equations
\usepackage{empheq} % used for the systems of equations

% adjustable brackets, parentheses and braces
\newcommand{\mf}[1]{\left(#1\right)} % Mathematical Function
\newcommand{\mfb}[1]{\left[#1\right]} % Mathematical Function w/Brackets
\newcommand{\mfbb}[1]{\left\{#1\right\}} % Mathematical Function w/Braces
\newcommand{\mfabs}[1]{\left| #1 \right|} % absolute value

% stacking elements
\newcommand{\stackequal}[2]{\underset{#1}{\overset{#2}{=}}} % condition over and under = sign
\newcommand{\stackx}[3]{\underset{#1}{\overset{#2}{#3}}} % stacking three elements

% sub- and superscripts
\newcommand{\power}[1]{^{#1}} % superscript
\newcommand{\sub}[1]{_{#1}} %subscript/index
\newcommand{\subtxt}[1]{_{\text{#1}}} %subscript with text

% systems of equations
\newcommand{\eqsysii}[2]{\begin{empheq}[left=\empheqlbrace]{equation} \begin{aligned} & #1 \\ & #2 \end{aligned} \end{empheq}} %system of equations with 2 equations
\newcommand{\eqsysiii}[3]{\begin{empheq}[left=\empheqlbrace]{equation} \begin{aligned} & #1 \\ & #2 \\ & #3 \end{aligned} \end{empheq}} %system of equations with 3 equations

